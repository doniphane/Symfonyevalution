{% extends 'base.html.twig' %}

{% block title %}Détail de la Tâche{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-6 text-center">{{ task.title }}</h1>

    <div class="max-w-xl mx-auto bg-white rounded shadow p-6">
        <p class="mb-4"><span class="font-semibold">Description :</span> {{ task.description }}</p>
        <p class="mb-4"><span class="font-semibold">Statut :</span> {{ task.status }}</p>
        <p class="mb-4"><span class="font-semibold">Créée le :</span> {{ task.createdAt|date('d/m/Y H:i') }}</p>
    </div>

    <div class="mt-6 text-center">
        <a href="{{ path('task_index') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded mr-2">Retour à la liste</a>
        <a href="{{ path('task_edit', {id: task.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded">Modifier</a>
    </div>
</div>
{% endblock %}
